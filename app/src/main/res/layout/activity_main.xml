<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="5"
        android:stretchColumns="*">

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:id="@+id/agentButton"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            android:src="@drawable/agent_u"
            android:scaleType="centerInside"
            android:background="#00ffffff"
            android:onClick="agent" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:id="@+id/boothButton"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerInside"
            android:src="@drawable/bootheide"
            android:background="#00ffffff"
            android:onClick="booth" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:id="@+id/c9Button"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerInside"
            android:src="@drawable/c9_tonic"
            android:background="#00ffffff"
            android:onClick="tonic" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:id="@+id/mxButton"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerInside"
            android:src="@drawable/mx_vile"
            android:background="#00ffffff"
            android:onClick="vile" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:id="@+id/oslerButton"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerInside"
            android:src="@drawable/oslers_oil"
            android:background="#00ffffff"
            android:onClick="osler" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:id="@+id/rubButton"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerInside"
            android:src="@drawable/rubiximab"
            android:background="#00ffffff"
            android:onClick="rub" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:id="@+id/serumButton"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerInside"
            android:src="@drawable/serum_n"
            android:background="#00ffffff"
            android:onClick="serum" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="112dp"
            android:id="@+id/w2Button"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:scaleType="centerInside"
            android:src="@drawable/w2_rose"
            android:background="#00ffffff"
            android:onClick="rose" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reset_string"
            android:id="@+id/resetButton"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:onClick="reset" />
    </GridLayout>
</RelativeLayout>
